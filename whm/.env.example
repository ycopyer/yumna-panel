# --- YUMNA PANEL v3.1 CONFIGURATION ---

# CORE SETTINGS
NODE_ENV=production
PORT=4000
APP_URL=http://localhost:4000
SECRET_KEY=change_this_to_a_secure_random_string_v3
AGENT_SECRET=change_this_shared_secret_for_nodes

# DATABASE (Central WHM Database)
DB_HOST=localhost
DB_USER=yumnapanel
DB_PASSWORD=yumnapanel
DB_NAME=yumnapanel
DB_PORT=3306

# --- BILLING & PAYMENT GATEWAYS ---

# BILLING
CURRENCY=USD
INVOICE_PREFIX=INV-

# STRIPE
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CURRENCY=usd

# PAYPAL
PAYPAL_CLIENT_ID=...
PAYPAL_CLIENT_SECRET=...
PAYPAL_MODE=sandbox # or live

# --- HIGH AVAILABILITY (HA) ---

# HA CLUSTER
HA_ENABLED=false
HA_NODE_ID=1
HA_PRIORITY=100

# DB REPLICATION
DB_REPLICATION_ENABLED=false
DB_MASTER_HOST=10.0.0.1
DB_SLAVE_COUNT=0
# DB_SLAVE1_HOST=10.0.0.2

# REDIS (For Session/Cache Sharing)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379

# --- CDN INTEGRATION ---

# CLOUDFLARE
CLOUDFLARE_EMAIL=user@example.com
CLOUDFLARE_API_KEY=...

# BUNNYCDN
BUNNYCDN_API_KEY=...
BUNNYCDN_STORAGE_API_KEY=...

# --- SECURITY & ALERTS ---

# SYSTEM
ADMIN_EMAIL=admin@example.com
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=

# GEMINI AI
GEMINI_API_KEY=...
