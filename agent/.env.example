# --- YUMNA AGENT CONFIGURATION ---

# CORE SETTINGS
NODE_ENV=production
PORT=3000

# COMMUNICATION
# The URL where WHM is running (this machine or remote)
WHM_URL=http://localhost:4000
# Must match the AGENT_SECRET in WHM's .env
AGENT_SECRET=change_this_shared_secret_for_nodes

# NODE INFORMATION
# Leave empty to auto-detect, or specify if needed
AGENT_IP=
AGENT_HOSTNAME=

# FEATURES
# Enable PowerDNS management on this node
ENABLE_DNS=true
# Enable Web Server management (Nginx/Apache)
ENABLE_WEB=true
# Enable Database management
ENABLE_DB=true
